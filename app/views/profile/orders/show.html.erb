<h1> Order ID: <%= @order.id %> for <%= @order.name %><h1>

<p>
  Order Date: <%= @order.created_at %>
  Last Updated: <%= @order.updated_at %>
  Status: <%= @order.status %>
</p>

<p>Total Items: <%= @order.items.sum('quantity') %><br>
  Grand Total: <%= @order.grandtotal %></p>

<h3>Items in this Order</h3>

<% @order.items.each do |item| %>
<section class=<%= "item-#{item.id}" %>>
<ul>
  <li><%= item.name %></li>
  <li><%= item.description %></li>
  <li><%= item.image %></li>
  <li> <%= ItemOrder.items_in_order_quantity(item, @order) %></li>
  <li> <%= ItemOrder.item_order_subtotal(item, @order) %></li>
</ul>
<% end %>
</section>
