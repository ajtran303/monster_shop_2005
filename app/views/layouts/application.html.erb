<!DOCTYPE html>
<html>
  <head>
    <title>Monster Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class = "topnav">
      <%= link_to "Home", "/" %>
      <%= link_to "All Merchants", "/merchants" %>
      <%= link_to "All Items", "/items" %>
      <% if user == nil %>
        <%= link_to "Cart: #{cart.total_items}", "/cart" %>
        <%= link_to "Log In", "/login" %>
        <%= link_to "Register", "/register" %>
      <% elsif user.role == "regular" %>
        <%= link_to "Cart: #{cart.total_items}", "/cart" %>
        <%= link_to "Profile", "/profile" %>
        <%= link_to "Log Out", "/" %>
        <%= "Logged in as #{user.name}" %>
      <% elsif user.role == "merchant_employee" %>
        <%= link_to "Cart: #{cart.total_items}", "/cart" %>
        <%= link_to "Profile", "/profile" %>
        <%= link_to "My Dashboard", "/merchant/dashboard" %>
        <%= link_to "Log Out", "/" %>
        <%= "Logged in as #{user.name}" %>
      <% end  %>
    </nav>
    <% flash.each do |name, msg| %>
      <div class= "<%=name%>-flash">
        <p><%= msg %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
